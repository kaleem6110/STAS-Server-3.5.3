<?xml version="1.0" encoding="UTF-8"?>
<configuration name="ldap">

	<!-- Context factory to be used to connect to LDAP -->
	<section name="INITIAL_CONTEXT_FACTORY">
		<value>com.sun.jndi.ldap.LdapCtxFactory</value>
	</section>

	<!-- LDAP Provider URL, ldap://servername:portno-->
	<section name="PROVIDER_URL">
		<value>ldaps://ldap-dev.globalepic.lu:636</value>
	</section>

	<!-- Specifies the authentication mechanism to use. For the Sun LDAP service provider, this can be one of the following strings:
		"none", "simple", sasl_mech, where sasl_mech is a space-separated list of SASL mechanism names -->
	<section name="SECURITY_AUTHENTICATION">
		<value>simple</value>
	</section>

	<!--Specifies the name of the user/program doing the authentication and depends on the value of the Context.SECURITY_AUTHENTICATION property,
		multiple domains need to be seprataed by #, for example cn=user1,ou=dn1#cn=user1,ou=dn2
	 -->
	<section name="SECURITY_PRINCIPAL">
		<value>cn=sti-read,ou=ldapAccess,dc=emergency,dc=lu</value>
	</section>

	<!-- LDAP Truststore Path. Uncomment below section  if Authentication is in SSl mode and provide appropriate value of trust store path.Path must be absolute.
	<section name="TRUSTSTORE_PATH">
		<value>/opt/sti/stas/ldapqa.jks</value>
	</section>
	-->
	<!-- Specifies the credentials of the user/program doing the authentication and depends on the value of the Context.SECURITY_AUTHENTICATION property,
	 The text needs to be encrypted using the sti-security.bat-->
	<section name="SECURITY_CREDENTIALS">
		<value>p3QGVGXszfuYocFjwZ8VGw==</value>
	</section>

	<!--Specifies the search principal to search for the user doing the authentication, most of the times its the domain string with the cn=users,
			for example,cn=users,dc=stiad,dc=com  -->
	<section name="SEARCH_USER_PRINCIPAL">
		<value>ou=users,ou=people,dc=emergency,dc=lu</value>
	</section>

	<!--Specifies the search principal to search for the groups, most of the times its the domain string, for example,cn=users,dc=stiad,dc=com  -->
	<section name="SEARCH_GROUP_PRINCIPAL">
		<value>ou=acl_profiles,ou=people,dc=emergency,dc=lu</value>
	</section>
	
	<!--Specifies Authorisation of user in Ldap,if it is true,authorisation takes place in LDAP otherwise in STAS-->
	<section name="AUTHORIZE_IN_LDAP">
		<value>true</value>
	</section>
</configuration>

