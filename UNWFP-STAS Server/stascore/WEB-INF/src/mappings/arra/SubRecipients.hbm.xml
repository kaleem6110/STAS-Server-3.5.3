<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
     "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
     "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping
    package="com.spacetimeinsight.arra.db.models">
    <class name="SubRecipients" table="STI_C_ARRA_SUB_RECIPIENTS">
        <id name="id" type="long">
            <generator class="native" />
        </id>
       
        <property name="dunsNumber" type="string" column="DUNS_NUMBER" />
        <property name="subAwardNumber" type="string" column="SUB_AWARD_NUMBER"/>
        <property name="amountOfSubAward" type="double" column="AMOUNT_OF_SUB_AWARD"/>   
        <property name="totalSubAwardFunds" type="double" column="TOTAL_SUB_AWARD_FUNDS"/>
        <property name="subAwardDate" type="date" column="SUB_AWARD_DATE"/>
        <property name="streetAddress1" type="string" column="STREET_ADDRESS_1" />
        <property name="streetAddress2" type="string" column="STREET_ADDRESS_2" />
        <property name="city" type="string" column="CITY" />
        <property name="state" type="string" column="STATE" />
        <property name="zipCode" type="string" column="ZIP_CODE" />
        <property name="congressDist" type="string" column="CONGRESS_DIST" />
        <property name="country" type="string" column="COUNTRY" />
        <property name="reportingAbility" type="boolean" column="REPORTING_ABILITY" />
        <property name="offName1" type="string" column="OFFICER_NAME_1" />
        <property name="offComp1" type="string" column="OFFICER_COMP_1" />
        <property name="offName2" type="string" column="OFFICER_NAME_2" />
        <property name="offComp2" type="string" column="OFFICER_COMP_2" />
        <property name="offName3" type="string" column="OFFICER_NAME_3" />
        <property name="offComp3" type="string" column="OFFICER_COMP_3" />
        <property name="offName4" type="string" column="OFFICER_NAME_4" />
        <property name="offComp4" type="string" column="OFFICER_COMP_4" />
        <property name="offName5" type="string" column="OFFICER_NAME_5" />
        <property name="offComp5" type="string" column="OFFICER_COMP_5" />
    </class>
</hibernate-mapping>
