<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
     "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
     "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.wfp.db.grid.model">

    <class name="Storms" table="STEM_STORMS">
    	<id name="id" type="long">
        	<generator class="native"/>
        </id>
        <property name="name" type="string" column="NAME"/>
        <property name="area" type="double" column="AREA"/>
        <property name="coordinates" type="text" column="COORDINATES"/>
        <property name="perimeter" type="string" column="PERIMETER"/>
        <property name="storm_dd_0" type="long" column="STORM_DD_0"/>
        <property name="storm_dd_1" type="long" column="STORM_DD_1"/>
        <property name="storm_zone" type="long" column="STORM_ZONE"/>
	<property name="updatedBy" type="string" column="UPDATED_BY"/>

    </class>

</hibernate-mapping>
