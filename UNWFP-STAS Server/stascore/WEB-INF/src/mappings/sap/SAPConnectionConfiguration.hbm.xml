<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
     "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
     "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping
    package="com.spacetimeinsight.db.sap.model">
    <class name="SAPConnectionConfiguration" table="STI_C_SAP_CONNECTION_CONFIG">
        <id name="id" type="long">
            <generator class="native" />
        </id>
        <property name="name" column="NAME" type="string" not-null="true" unique="true"/>
        <property name="description" type="string" column="DESCRIPTION" length="200"/>
	    <property name="hostName" type="string" column="HOSTNAME" not-null="true" length="100"/>
        <property name="client" type="string" column="CLIENT" not-null="true" length="10"/>
        <property name="userName" type="string" column="USER_NAME" length="50"/>
        <property name="password" type="string" column="PASSWORD" length="500"/>
        <property name="sapLanguage" type="string" column="SAP_LANGUAGE" length="10"/>
        <property name="instanceNumber" type="string" column="INSTANCE_NUMBER" length="10"/>
		<property name="trace" type="string" column="TRACE" length="10"/>
		<property name="poolCapacity" type="int" column="POOL_CAPACITY"/>
		<property name="isActive" type="boolean" column="IS_ACTIVE"/>
        <property name="customProperties" type="text" column="CUSTOM_PROPERTIES"/>

        <property name="domainId" type="long" column="DOMAIN_ID" not-null="true"/>
        <!--  not language dependent
        <property name="languageId" type="long" column="LANGUAGE_ID" not-null="true"/>
         -->
        <property name="createdDate" type="timestamp" column="CREATED_DATE"/>
        <property name="modifiedDate" type="timestamp" column="MODIFIED_DATE"/>

    </class>
</hibernate-mapping>
